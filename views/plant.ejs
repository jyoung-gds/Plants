<style>
  
  .flexibox{
    margin-top: 50px;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly center;
    flex-wrap: wrap;
  }

.flexibox-input{
    width:300px;
    min-height:300px;
    margin: 5px;
    background-color: rgb(175, 225, 175);
    text-align: center;
    padding-top: 60px;
    border-radius: 50px;
  }

</style>

<h1 class='pageTitle'>Plants to cheer you up</h1>
<h4 style="text-align: center; font-size: 20px; font-weight: normal;">We're here to give you all the infromation on your planty friends so that you can find a plant that fits into your environment and matches your caring capabilties.</h4>

<section class='flexibox'>
<% plants.forEach(function(plant){ %>

 <!-- <body style="background-color: greenyellow"> -->

  <ul style="text-align: center;" class="plants-looping">
    <div class ='flexibox-input'> 
      <div class="single-plant">
          <span class="date" >
          <h3 class='plantName'><%= plant.Common_Name%></h3>
          <br>
          <img src='img/<%=plant.img_name%>' style='height:100px; width:100px;'>
          <br>
          <form id = 'get-more-info' method='GET' action='/plants/<%= plant.id%>'> 
            <button class="btn btn-primary btn-lg outline" type='submit'>View details</button>
          </form>
      </div>
    </ul>
</body>
</div> 
  <% }) %>
</section>

